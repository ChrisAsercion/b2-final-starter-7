<h2>Edit <%= @discount.tag %> page</h2>

<%= form_with method: :patch, url: merchant_bulk_discount_path(@discount.merchant.id, @discount), class: 'merchant_edit_bulk_discount_form', local: true do |f| %>
  <%= f.label :tag %>
  <%= f.text_field :tag %><br/><br/>
  <%= f.label :percentage_discount %>
  <%= f.number_field :percentage_discount %> <br/><br/>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>